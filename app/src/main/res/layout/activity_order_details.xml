<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    tools:context=".OrderDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/RobotoBoldTextAppearance">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/space_10"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:id="@+id/card_viewb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/space_3"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <in.binplus.mobusers.Fonts.LatoBLack
                android:textColor="#fff"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_button"
                android:padding="@dimen/space_4"
                android:textAlignment="center"
                android:text="@string/txt_order_details"
                android:textSize="@dimen/space_15"
                />

            <LinearLayout
                android:paddingBottom="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/txt_order_id"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_order_id"
                        android:layout_toRightOf="@id/tx5"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/space_14"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/txt_order_date"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_order_date"
                        android:layout_toRightOf="@id/tx6"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/space_14"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/textname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/txt_imei"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_imei_no"
                        android:layout_toRightOf="@id/textname"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/space_14"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >
                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/txtmobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14"
                        android:padding="2dp"
                        android:text="@string/txt_brand"/>

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_brand_name"
                        android:layout_toRightOf="@id/txtmobile"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textSize="@dimen/space_14"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/txtpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:padding="2dp"
                        android:text="@string/txt_model"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_model_name"
                        android:layout_toRightOf="@id/txtpin"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/space_14"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:padding="2dp"
                        android:text="@string/txt_problems"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_problem"
                        android:layout_toRightOf="@id/tx7"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/space_14"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:padding="2dp"
                        android:text="@string/txt_instructions"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_instructions"
                        android:layout_toRightOf="@id/tx8"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/space_14"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/space_3"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <in.binplus.mobusers.Fonts.LatoBLack
                android:textColor="#fff"
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_button"
                android:padding="@dimen/space_4"
                android:textAlignment="center"
                android:text="@string/txt_pick_details"
                android:textSize="@dimen/space_15"
                />

            <LinearLayout
                android:paddingBottom="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/txp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/txt_name"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_name"
                        android:layout_toRightOf="@id/txp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/space_14"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/txt_pincode"
                        android:textColor="@android:color/black"
                        android:textSize="14dp" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_pincode"
                        android:layout_toRightOf="@id/tx2"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/space_14"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >
                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14"
                        android:padding="2dp"
                        android:text="@string/txt_city"/>

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_toRightOf="@id/tx3"
                        android:padding="@dimen/space_2"
                        android:text="0"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/space_14" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:padding="2dp"
                        android:text="@string/txt_model"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_address"
                        android:layout_toRightOf="@id/tx4"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/space_14"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_2"
                    >

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tx10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:padding="2dp"
                        android:text="Status"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/space_14" />

                    <in.binplus.mobusers.Fonts.LatoBLack
                        android:id="@+id/tv_status"
                        android:layout_toRightOf="@id/tx10"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/space_2"
                        android:textAlignment="viewEnd"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/space_14"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </RelativeLayout>




            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_feedback"
        android:visibility="visible"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/space_3"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp"
    android:paddingBottom="@dimen/space_20"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <in.binplus.mobusers.Fonts.LatoBLack
                    android:text="@string/txt_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edt_feedback"
                    android:hint="@string/txt_reason"
                    android:fontFamily="@font/bold"
                    android:textSize="15sp"
                    android:layout_marginTop="@dimen/space_5"
                    android:background="@drawable/edit_message_layout"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:paddingTop="5dp"
                    android:paddingLeft="@dimen/space_10"
                    android:layout_height="100dp"/>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_cancel_order"
                android:fontFamily="@font/bold"
                android:text="@string/btn_cancel_order"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:layout_margin="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:background="@drawable/bg_rounded_button"
                android:backgroundTint="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>