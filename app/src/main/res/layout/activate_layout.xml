<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/contact_number"
    android:gravity="center">

   <androidx.cardview.widget.CardView
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       app:cardCornerRadius="10dp"
       app:cardBackgroundColor="@color/white"
       android:background="@color/white">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="match_parent"
               android:src="@drawable/activate_icon"
               android:layout_height="wrap_content"/>

           <Button
               android:id="@+id/btn_activate"
               android:layout_width="match_parent"
               android:text="@string/txt_activate"
               android:textColor="@color/white"
               android:layout_marginRight="20dp"
               android:layout_marginTop="@dimen/space_20"

               android:layout_marginLeft="@dimen/space_20"
               android:textAllCaps="false"

               android:background="@drawable/login_button"
               android:layout_height="wrap_content"/>
           <Button
               android:id="@+id/btn_renew"
               android:layout_width="match_parent"
               android:text="@string/txt_renew"
               android:textColor="@color/white"
               android:layout_marginRight="20dp"
               android:layout_marginTop="@dimen/space_10"
               android:layout_marginBottom="@dimen/space_20"
               android:layout_marginLeft="@dimen/space_20"
               android:textAllCaps="false"

               android:background="@drawable/reg_button"
               android:layout_height="wrap_content"/>





       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <in.binplus.mobusers.Fonts.LatoBLack
               android:id="@+id/btn_close"
               android:layout_width="wrap_content"
               android:text="X"
               android:layout_alignParentRight="true"
               android:textStyle="bold"
               android:textSize="22dp"
               android:paddingRight="10dp"
               android:textColor="@color/left_color"
               android:textAllCaps="false"
               android:layout_height="wrap_content"/>

       </RelativeLayout>


   </androidx.cardview.widget.CardView>

</RelativeLayout>